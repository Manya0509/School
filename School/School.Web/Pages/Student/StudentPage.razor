@page "/Student"
@inherits StudentPageViewModel
<h3>Ученики</h3>  

<i class=" btn btn-danger bi-search"></i>
<i class="bi bi-arrow-right-square"></i>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Класс</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.LastName</td>
                <td>@student.FirstName</td>
                <td>@student.MiddleName</td>
                <td>@student.Age</td>
                <td>@student.ClassId</td>
            </tr>
        }
    </tbody>
</table>


