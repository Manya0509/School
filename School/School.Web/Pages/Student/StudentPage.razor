@page "/Student"
@inherits StudentPageViewModel
<h3>Ученики</h3>  

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Класс</th>
            <th>Изменение</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.LastName</td>
                <td>@student.FirstName</td>
                <td>@student.MiddleName</td>
                <td>@student.Age</td>
                <td>@student.ClassId</td>
                <td>
                    <button class="btn btn-outline-secondary"
                            @onclick="@(() => SelectStudent(student))">
                        Изменить
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary mb-3" @onclick="AddNewStudent">Добавить ученика</button>

@if (SelectedStudent != null)
{
    <h4>@(SelectedStudent.Id == 0 ? "Добавление нового ученика" : "Изменение данных ученика")</h4>

    <div class="card p-3 mt-3">
        <div class="form-group">
            <label>Фамилия:</label>
            <input class="form-control" @bind="SelectedStudent.LastName" />
        </div>

        <div class="form-group mt-2">
            <label>Имя:</label>
            <input class="form-control" @bind="SelectedStudent.FirstName" />
        </div>

        <div class="form-group mt-2">
            <label>Отчество:</label>
            <input class="form-control" @bind="SelectedStudent.MiddleName" />
        </div>

        <div class="form-group mt-2">
            <label>Возраст:</label>
            <input type="number" class="form-control" @bind="SelectedStudent.Age" />
        </div>

        <div class="form-group mt-2">
            <label>Класс:</label>
            <input type="number" class="form-control" @bind="SelectedStudent.ClassId" />
        </div>

        @* <div class="mt-3">
            <button class="btn btn-success" @onclick="SaveChanges">Сохранить</button>
            <button class="btn btn-secondary ms-2" @onclick="CancelEdit">Отмена</button>
        </div> *@
    </div>
}


<EditStudentDialog ViewModel="EditModel" Save="SaveChanges"></EditStudentDialog>


