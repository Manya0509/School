@using School.Web.PageModels.Students

<MatDialog IsOpen="@ViewModel.IsOpenDialog" CanBeClosed="false">
    <MatDialogTitle class="diHeader">
        <h4>Подтверждение удаления</h4>
    </MatDialogTitle>
    <MatDialogContent>
        @if (ViewModel.StudentDelete != null)
        {
            <h5>Вы уверены, что хотете удалить ученика: </h5>
            <p><strong>@ViewModel.StudentDelete.LastName @ViewModel.StudentDelete.FirstName @ViewModel.StudentDelete.MiddleName</strong>?</p>
        }
    </MatDialogContent>
    <MatDialogActions>
        <button class="btn btn-danger" @onclick="@(() => ConfirmDelete.InvokeAsync(true))">Да, удалить</button>
        <button class="btn btn-secondary" @onclick="@(() => ConfirmDelete.InvokeAsync(false))">Отмена</button>
    </MatDialogActions>
</MatDialog>

@code {
    [Parameter] public DeleteStudentModel ViewModel { get; set; }
    [Parameter] public EventCallback<bool> ConfirmDelete { get; set; }
}
