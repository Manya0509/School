@page "/Teacher"
@inherits TeacherPageViewModel
<h3>Преподаватели</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Предмет</th>
            <th>Изменение</th>
            <th>Удаление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Teachers)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.LastName</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.MiddleName</td>
                <td>@teacher.Age</td>
                <td>@teacher.SubjectName</td>
                <td>
                    <button class="btn btn-outline-secondary"
                            @onclick="@(() => SelectTeacher(teacher))">
                        Изменить
                    </button>
                </td>
                <td>
                    <button class="btn btn-outline-danger"
                            @onclick="@(() => DeleteTeacher(teacher))">
                        Удалить
                    </button>
                </td>
                <td>
                    @if (teacher.ChangeLogs != null)
                    {
                        <i class="bi bi-info-circle" title="@GetChangeLog(teacher.ChangeLogs)"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary mb-3" @onclick="AddNewTeacher">Добавить преподавателя</button>

<EditTeacherDialog ViewModel="EditModel" Save="SaveChanges" Reload="HandleReload"></EditTeacherDialog>
<DeleteTeacherDialog ViewModel="DeleteModel" ConfirmDelete="ConfirmDelete"></DeleteTeacherDialog>
<ErrorDialog IsOpen="@IsOpenErrorDialog" Message="@ErrorMessage" OnClose="@CloseErrorDialog" />

