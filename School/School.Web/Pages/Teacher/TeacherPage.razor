@page "/Teacher"
@inherits TeacherPageViewModel
<h3>Преподаватели</h3>

<button class="btn btn-outline-primary btn-sm mb-3"
    @onclick="ToggleFilters">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
    </svg>
</button>

@if(ShowFilters)
{
    <div class="mb-3 p-3 border rounded">
        <div class="row">
            <div class="col-md-4">
                <label>Фамилия:</label>
                <InputText @bind-Value="FilterTeacher.LastName"
                           class="form-control form-control-sm col-9" id="LastName" title="Фамилия" />
            </div>
            <div class="col-md-4">
                <label>Имя:</label>
                <InputText @bind-Value="FilterTeacher.FirstName"
                           class="form-control form-control-sm col-9" id="FirstName" title="Имя" />
            </div>
            <div class="col-md-4">
                <label>Предмет:</label>
                <InputText @bind-Value="FilterTeacher.SubjectName"
                           class="form-control form-control-sm col-9" id="SubjectName" title="Предмет" />
            </div>
    </div>
    </div>
    <div class="mt-2">
        <button class="btn btn-primary btn-sm" @onclick="Search">
            Поиск
        </button>

        <button class="btn btn-secondary btn-sm ms-2" @onclick="ResetFilter">
            Сброс фильтра
        </button>
    </div>
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Предмет</th>
            <th>Изменение</th>
            <th>Удаление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Teachers)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.LastName</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.MiddleName</td>
                <td>@teacher.Age</td>
                <td>@teacher.SubjectName</td>
                <td>
                    <button class="btn btn-outline-secondary"
                            @onclick="@(() => SelectTeacher(teacher))">
                        Изменить
                    </button>
                </td>
                <td>
                    <button class="btn btn-outline-danger"
                            @onclick="@(() => DeleteTeacher(teacher))">
                        Удалить
                    </button>
                </td>
                <td>
                    @if (teacher.ChangeLogs != null)
                    {
                        <i class="bi bi-info-circle" title="@GetChangeLog(teacher.ChangeLogs)"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary mb-3" @onclick="AddNewTeacher">Добавить преподавателя</button>

<EditTeacherDialog ViewModel="EditModel" Save="SaveChanges" Reload="HandleReload"></EditTeacherDialog>
<DeleteTeacherDialog ViewModel="DeleteModel" ConfirmDelete="ConfirmDelete"></DeleteTeacherDialog>
<ErrorDialog IsOpen="@IsOpenErrorDialog" Message="@ErrorMessage" OnClose="@CloseErrorDialog" />

