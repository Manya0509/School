@page "/Management"
@inherits ManagementPageViewModel
<h3>Руководство</h3>

<button class="btn btn-outline-primary btn-sm mb-3 bi bi-search"
        @onclick="ToggleFilters">
</button>

@if (ShowFilters)
{
    <div class="mb-3 p-3 border rounded">
        <div class="row">
            <div class="col-md-4">
                <label>Фамилия:</label>
                <InputText @bind-Value="FilterManagement.LastName"
                           class="form-control form-control-sm col-9" id="LastName" title="Фамилия" />
            </div>
            <div class="col-md-4">
                <label>Имя:</label>
                <InputText @bind-Value="FilterManagement.FirstName"
                           class="form-control form-control-sm col-9" id="FirstName" title="Имя" />
            </div>
            <div class="col-md-4">
                <label>Предмет:</label>
                <InputText @bind-Value="FilterManagement.Position"
                           class="form-control form-control-sm col-9" id="SubjectName" title="Должность" />
            </div>
        </div>
    </div>
    <div class="mt-2">
        <button class="btn btn-primary btn-sm" @onclick="Search">
            Поиск
        </button>

        <button class="btn btn-secondary btn-sm ms-2" @onclick="ResetFilter">
            Сброс фильтра
        </button>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Должность</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Изменение</th>
            <th>Удаление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var management in Managements)
        {
            <tr>
                <td>@management.Id</td>
                <td>@management.Position </td>
                <td>@management.LastName</td>
                <td>@management.FirstName</td>
                <td>@management.MiddleName</td>
                <td>@management.Age</td>
                <td>
                    <button class="btn btn-outline-secondary"
                            @onclick="@(() => SelectManagement(management))">
                        Изменить
                    </button>
                </td>
                <td>
                    <button class="btn btn-outline-danger"
                    @onclick="@(() => DeleteManagement(management))">
                    Удалить
                </button>
                </td>
                <td>
                    @if (management.ChangeLogs != null)
                    {
                        <i class="bi bi-info-circle" title="@GetChangeLog(management.ChangeLogs)"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary mb-3" @onclick="AddNewManagement">Добавить руководителя</button>

<EditManagementDialog ViewModel="EditModel" Save="SaveChanges" Reload="HandleReload"></EditManagementDialog>
<DeleteManagementDialog ViewModel="DeleteModel" ConfirmDelete="ConfirmDelete"></DeleteManagementDialog>
<ErrorDialog IsOpen="@IsOpenErrorDialog" Message="@ErrorMessage" OnClose="@CloseErrorDialog" />

