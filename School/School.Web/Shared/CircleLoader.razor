<link href="/css/CircleLoader.css" rel="stylesheet" />

@if (IsShowSpiner)
{
    <div class="conterByCircleLoader">
        <div class="loader" style="@Style transition: all .5s ease-in-out; @(stopLoader ? "width: 0px;height: 0px; border: 0px solid #f3f3f3;" : "")"></div>
        @if (!string.IsNullOrEmpty(Text))
        {
            <p class="mt-2" style="color:#6f6f6f;">@Text</p>
        }
    </div>
    if (stopLoader)
    {
        <div class="check-container absolute-center">
            <div class="check-background">
                <svg viewBox="0 0 65 51" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7 25L27.3077 44L58.5 7" stroke="white" stroke-width="13" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
        </div>
    }
}

@code {

    [Parameter]
    public bool IsShowSpiner { get; set; }

    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
    public Action StopLoader { get; set; }

    public bool stopLoader { get; set; }
    

    public async Task GetCheck()
    {
        stopLoader = true;
        await InvokeAsync(StateHasChanged);
        await Task.Delay(1600);
    }


}